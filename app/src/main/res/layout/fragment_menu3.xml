<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.limify01.Menu3Fragment">


    <CalendarView
        android:id="@+id/customCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ListView
        android:id="@+id/lv_HistoryView"
        android:layout_width="425dp"
        android:layout_height="287dp"
        android:layout_below="@+id/customCalendar"
        android:layout_marginTop="96dp"
        android:layout_marginBottom="57dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/historyButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/historyButton"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/customCalendar"
        android:layout_alignBottom="@+id/customCalendar"
        android:layout_marginStart="305dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="-89dp"
        android:hint="@string/HistoryKeuangan"
        android:text="All"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/customCalendar" />

    <Button
        android:id="@+id/weekButton"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/customCalendar"
        android:layout_alignBottom="@+id/customCalendar"
        android:layout_marginStart="17dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="-89dp"
        android:text="Week"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/monthButton"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/customCalendar"
        android:layout_alignBottom="@+id/customCalendar"
        android:layout_marginStart="113dp"

        android:layout_marginTop="40dp"
        android:layout_marginBottom="-89dp"
        android:text="Month"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/yearButton"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/customCalendar"
        android:layout_alignBottom="@+id/customCalendar"
        android:layout_marginStart="208dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="-89dp"
        android:text="Year"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/History"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customCalendar"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="5dp"
        android:rotationX="0"
        android:text="History"
        android:textSize="25dp" />

</RelativeLayout>